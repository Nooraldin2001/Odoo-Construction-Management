<odoo>
    <record id="vehicle_equipment_request_tree_view" model="ir.ui.view">
        <field name="name">vehicle.equipment.request.tree.view</field>
        <field name="model">vehicle.equipment.request</field>
        <field name="arch" type="xml">
            <tree create='False'>
                <field name="name"/>
                <field name="description"/>
                <field name="request_type"/>
                <field name="hours"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="vehicle_equipment_request_form_view" model="ir.ui.view">
        <field name="name">vehicle.equipment.request.form.view</field>
        <field name="model">vehicle.equipment.request</field>
        <field name="arch" type="xml">
            <form string="form" create='False'>
                <header>
                    <button name='action_draft' type="object" string='Reset to Draft' states='cancel'/>
                    <button name="action_confirm" type="object" string="Confirm" states="draft" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="hours"/>
                            <field name="request_type"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                    <notebook>
                        <page string="Equipment" attrs="{'invisible': [('request_type', '!=', 'equipment')]}">
                            <field name="equipment_ids"/>
                        </page>
                        <page string="Fleet" attrs="{'invisible': [('request_type', '!=', 'vehicle')]}">
                            <field name="fleet_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_vehicle_equipment_request" model="ir.actions.act_window">
        <field name="name">Vehicle Equipment Request</field>
        <field name="res_model">vehicle.equipment.request</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_request_type':'vehicle'}</field>
    </record>

</odoo>