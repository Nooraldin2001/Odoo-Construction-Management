<odoo>
    <record id="construction_daily_logs_tree_view" model="ir.ui.view">
        <field name="name">construct.daily.logs.tree.view</field>
        <field name="model">construct.daily.logs</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="project_id"/>
                <field name="job_costing_id"/>
                <field name="analytic_account_id"/>
                <field name="employee_id"/>
                <field name="parent_id"/>
                <field name="department_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>
    <record id="construction_daily_logs_form_view" model="ir.ui.view">
        <field name="name">construct.daily.logs.form.view</field>
        <field name="model">construct.daily.logs</field>
        <field name="arch" type="xml">
            <form string="form">
                <header>
                    <button name="send_to_manager" string="Send Report to Manager" class="btn-primary" type="object"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/><br/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="project_id"/>
                            <field name="job_costing_id"/>
                            <field name="analytic_account_id"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="parent_id"/>
                            <field name="department_id"/>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Job Orders">
                            <field name="task_ids" domain="[('project_id', '=', project_id)]">
                                <tree>
                                    <field name="name"/>
                                    <field name="project_id"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="company_id"/>
                                    <field name="planned_hours" sum="Total Planned Hours"/>
                                    <field name="effective_hours" sum="Total Spent Hours"/>
                                    <field name="remaining_hours" sum="Total Remaining Hours"/>
                                    <field name="stage_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Construction Daily Logs">
                            <field name="cnstrct_daily_logs" widget="html"/>
                        </page>
                        <page string="Subcontractors">
                            <field name="cnstrct_subcontractors" widget="html"/>
                        </page>
                        <page string="Activities">
                            <field name="cnstrct_activities" widget="html"/>
                        </page>
                        <page string="Test/Inspection">
                            <field name="cnstrct_test" widget="html"/>
                        </page>
                        <page string="Eqquipment">
                            <field name="cnstrct_eqquipment" widget="html"/>
                        </page>
                        <page string="Material Delivries">
                            <field name="cnstrct_material_delivery" widget="html"/>
                        </page>
                        <page string="Visitors">
                            <field name="cnstrct_visitors" widget="html"/>
                        </page>
                        <page string="Notes">
                            <field name="cnstrct_notes" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_view_construction_daily_logs" model="ir.actions.act_window">
        <field name="name">Construction Daily Logs</field>
        <field name="res_model">construct.daily.logs</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>