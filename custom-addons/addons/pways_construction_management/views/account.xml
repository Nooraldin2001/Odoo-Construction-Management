<?xml version="1.0"?>
<odoo>
    <data>
        <!-- analytic -->
        <record id="view_account_analytic_line_tree_inherited" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit.List</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='amount']" position="after">
                    <field name="is_billed" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_line_form_inherited" model="ir.ui.view">
            <field name="name">view.account.analytic.line.inherit.form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_line_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//group[@name='analytic_item']/field[@name='company_id']" position="after">
                    <field name="is_billed" readonly="1"/>
                    <field name="is_from_task" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- hr_timesheet -->
        <record id="account_analytic_line_job_costing_tree" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit List</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='name']" position="after">
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                    <field name="job_cost_id" options="{'no_create': True, 'no_open': True}"/>
                    <field name="job_cost_line_id" domain="[]" options="{'no_create': True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>

        <record id="account_analytic_line_job_costing_form" model="ir.ui.view">
            <field name="name">account.analytic.line.inherit Form</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='unit_amount']" position="after">
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                    <field name="job_cost_id" widget="selection"/>
                    <field name="job_cost_line_id" domain="[]"/>
                    <field name="is_billed" readonly="1"/>
                    <field name="is_from_task" invisible="1"/>
                </xpath>
            </field>
        </record>

        <!-- account -->
        <record id="account_invoice_line_job_costing_tree" model="ir.ui.view">
            <field name="name">account.invoice.line.inherit List</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='name']" position="after">
                    <field name="job_cost_id"/>
                    <field name="job_cost_line_id" domain="[]"/>
                </xpath>
            </field>
        </record>

        <record id="account_invoice_job_cost_form" model="ir.ui.view">
            <field name="name">account_invoice.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='purchase_vendor_bill_id']" position="after">
                    <field name="project_id"/>
                    <field name="task_id" domain="[('project_id', '=', project_id)]"/>
                    <field name="job_cost_id" domain="[('project_id', '=', project_id)]"/>
                </xpath>
                <xpath expr = "//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                    <field name="job_cost_id" options="{'no_create': True, 'no_open': True}" domain="[]" attrs="{'column_invisible': [('parent.move_type', 'not in', ('in_invoice', 'in_refund','in_receipt'))]}"/>
                    <field name="job_cost_line_id" domain="[]" options="{'no_create': True, 'no_open': True}" attrs="{'column_invisible': [('parent.move_type', 'not in', ('in_invoice', 'in_refund','in_receipt'))]}"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//field[@name='name']" position="after">
                    <field name="job_cost_id" invisible="1"/>
                    <field name="job_cost_line_id" invisible="1"/>
                </xpath>
            </field>
        </record>
        
        <record id="account_invoice_line_job_cost_form" model="ir.ui.view">
            <field name="name">account_invoice.line.inherit.form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr = "//field[@name='product_id']" position="after">
                    <field name="job_cost_id" domain="[]"/>
                    <field name="job_cost_line_id" domain="[]" widget="selection"/>
                </xpath>
            </field>
        </record>
    
    </data>
</odoo>
