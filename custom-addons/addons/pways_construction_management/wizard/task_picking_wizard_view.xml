<odoo>
    
    <record id="view_task_picking_wizard_form" model="ir.ui.view">
        <field name="name">task.picking.wizard.form</field>
        <field name="model">task.picking.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="partner_id" string="Partner"/>
                        <field name="picking_type_id" string="Picking type"/>
                        <field name="project_id" string="Project" invisible='1'/>
                    </group>
                    <group>
                        <field name="job_cost_id" invisible="1"/>
                        <field name="location_id" string="Location"/>
                        <field name="date" string="Date"/>
                    </group>
                </group>
                <notebook>
                    <page string="Operations" name="task_pick_wiz_lines">
                        <field name="task_pick_wiz_lines" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id" string="Product"/>
                                <field name="description" string="Description"/>
                                <field name="product_uom_qty" string="Qty"/>
                                <field name="consumed_qty" string="Consumed Qty" invisible="1"/>
                                <field name="product_uom" string="UOM"/>
                                <field name="is_picked" string="Picked" invisible="1"/>
                                <field name="consumed_material_id" string="Ref" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="create_stock_picking"  type="object"  string="Create Picking" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_task_picking_wizard" model="ir.actions.act_window">
        <field name="name">Task Picking Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">task.picking.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
